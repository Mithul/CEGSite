<!DOCTYPE html>
<html>
<head>
  <title>CEGSite</title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Wrap all page content here -->
<div id="wrap">
  

<!--start of title page-->

<header class="masthead">
    <div class="container">
    <div class="row">
    <div class="col-md-3">
        
      </div>

      <div class="col-md-6">
        <h1 id = "ceg" style = 'font-family: Copperplate,"Copperplate Gothic Light",fantasy,80px;'><a href="#" title="Bootstrap Template">College <br>Of <br>Engineering</a></h1>
          
      </div>
      <div class="col-md-3">
        
          
      </div>
    </div>
    </div>
</header>
 
<!--end of title page-->





  
<!-- start of navbar -->

<%= render 'layouts/navigation' %>
  


<!-- start of navbar -->




<!--login/signup-->

<div class="container">
        
       
         
         <div class="modal fade login" id="loginModal">
              <div class="modal-dialog login animated">
                  <div class="modal-content">
                     <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Login with</h4>
                    </div>
                    <div class="modal-body">  
                        <div class="box">
                             <div class="content">
                                <div class="social">
                                    <a class="circle github" href="/auth/github">
                                        <i class="fa fa-github fa-fw"></i>
                                    </a>
                                    <a id="google_login" class="circle google" href="/auth/google_oauth2">
                                        <i class="fa fa-google-plus fa-fw"></i>
                                    </a>
                                    <a id="facebook_login" class="circle facebook" href="/auth/facebook">
                                        <i class="fa fa-facebook fa-fw"></i>
                                    </a>
                                </div>
                                <div class="division">
                                    <div class="line l"></div>
                                      <span>or</span>
                                    <div class="line r"></div>
                                </div>
                                <div class="error"></div>
                                <div class="form loginBox">
                                    <form method="post" action="/login" accept-charset="UTF-8">
                                    <input id="email" class="form-control" type="text" placeholder="Email" name="email">
                                    <input id="password" class="form-control" type="password" placeholder="Password" name="password">
                                    <input class="btn btn-default btn-login" type="button" value="Login" onclick="loginAjax()">
                                    </form>
                                </div>
                             </div>
                        </div>
                        <div class="box">
                            <div class="content registerBox" style="display:none;">
                             <div class="form">
                                <form method="post" html="{:multipart=>true}" data-remote="true" action="/register" accept-charset="UTF-8">
                                <input id="email" class="form-control" type="text" placeholder="Email" name="email">
                                <input id="password" class="form-control" type="password" placeholder="Password" name="password">
                                <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation">
                                <input class="btn btn-default btn-register" type="submit" value="Create account" name="commit">
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="forgot login-footer">
                            <span>Looking to 
                                 <a href="javascript: showRegisterForm();">create an account</a>
                            ?</span>
                        </div>
                        <div class="forgot register-footer" style="display:none">
                             <span>Already have an account?</span>
                             <a href="javascript: showLoginForm();">Login</a>
                        </div>
                    </div>        
                  </div>
              </div>
          </div>
    </div>


<!--end of login/signup-->

<div id="main">
  <% if !(params[:controller]=='visitors' and params[:action]=='index') %>
    <div class="container">
  <% else %>
    <div>
  <% end %>
      <%= yield %>
    </div>
</div>
<!--start of footer -->


<div id="footer">
  <div class="container">
    <p class="text-muted">Coded wid love by <a href="http://www.annauniv.edu">CTF</a></p>
  </div>
</div>

<!--end of footer -->



<!-- move up icon-->

<!-- <ul class="nav pull-right scroll-top">
  <li><a href="#" title="Scroll to top"><i class="glyphicon glyphicon-chevron-up"></i></a></li>
</ul> -->

<!-- move up icon-->

    <script type="text/javascript">
    $(function() {
      $('.raptor-editable').raptor({
        plugins: {
          save: {
            plugin: 'saveJson'
          },
          saveJson: {
            url: '/save.php',
            postName: 'raptor-content',
            id: function() {
              return this.raptor.getElement().data('id');
            }
          }
        }
      });
    });
    </script>
  </body>
</body>
</html>
